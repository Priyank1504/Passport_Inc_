<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/LitBlue"
    xmlns:scrolling_image_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.priyank.passport_inc.MainActivity">
    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/passport"
        android:id="@+id/imageView"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        />
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_centerInParent="true"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:id="@+id/frameLayout">
        <com.q42.android.scrollingimageview.ScrollingImageView
            android:id="@+id/scrolling_background"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            scrolling_image_view:speed="1dp"
            scrolling_image_view:src="@drawable/scrolling_background" />
        <com.q42.android.scrollingimageview.ScrollingImageView
            android:id="@+id/scrolling_foreground"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            scrolling_image_view:speed="2.0dp"
            scrolling_image_view:src="@drawable/scrolling_foreground" />
        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="500px"
            android:layout_height="400px"
            android:scaleType="centerInside"
            android:src="@drawable/van"
            android:layout_gravity="center_horizontal|bottom" />
    </FrameLayout>
    <TextView
        android:id="@+id/quote"
        android:textSize="25dp"
        android:textStyle="bold"
        android:textAlignment="center"
        android:textColor="@color/NavyBlue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:layout_below="@+id/frameLayout"
        android:layout_centerHorizontal="true" />
    <com.github.rubensousa.raiflatbutton.RaiflatButton
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="20dp"
        android:text="Step in"
        android:shadowRadius="2"
        style="@style/Base.Widget.AppCompat.Button.Colored"
        android:shadowColor="#000020"
        android:shadowDx="2"
        android:shadowDy="4"
        android:layout_marginTop="12dp"
        android:id="@+id/buttonStepIn"
        android:textSize="18dp"
        android:background="@color/colorPassport"
        android:textStyle="bold"
        android:layout_gravity="center_horizontal|center"
        android:textColor="@color/colorBlack"
        android:layout_below="@+id/quote"
        android:layout_centerHorizontal="true"
        />
</RelativeLayout>
