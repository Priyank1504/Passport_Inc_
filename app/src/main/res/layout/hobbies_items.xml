<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    card_view:cardCornerRadius="10dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <EditText
            android:id="@+id/textViewHobby"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:textAlignment="center"
            android:textSize="15dp"
            android:textStyle="bold"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_margin="20dp" />
        <ImageView
            android:id="@+id/imageViewEdit"
            android:layout_width="40dp"
            android:layout_height="40dp"

            app:srcCompat="@drawable/edit"
            android:layout_alignTop="@+id/textViewHobby"
            android:layout_alignRight="@+id/textViewHobby"
            android:layout_alignEnd="@+id/textViewHobby" />
        <ImageView
            android:id="@+id/imageViewDel"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_margin="20dp"
            android:layout_toLeftOf="@+id/imageViewEdit"
            app:srcCompat="@drawable/del" />
    </RelativeLayout>
</android.support.v7.widget.CardView>